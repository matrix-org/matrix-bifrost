{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "allowJs": false,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    // TODO: Enable these
    "strict": false,
    "strictNullChecks": false,
    // types/xmpp__xml has duplicate global identifiers
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
}
