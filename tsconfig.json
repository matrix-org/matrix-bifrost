{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": false,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    "esModuleInterop": true,
    // TODO: Enable these
    "strict": false,
    "strictNullChecks": false,
    // types/xmpp__xml has duplicate global identifiers
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
}
